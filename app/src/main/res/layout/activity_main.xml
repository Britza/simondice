<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#EC0C0C"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/amarillo"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#FFFF00"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />
        <!--android:text="@string/boton_amarillo"-->

    <Button
        android:id="@+id/rojo"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="63dp"
        android:backgroundTint="#EC4849"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/amarillo"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />
        <!--android:text="@string/boton_rojo"-->
    <Button
        android:id="@+id/verde"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="#008000"

        app:layout_constraintBottom_toTopOf="@+id/jugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amarillo" />
        <!--android:text="@string/boton_verde"-->

    <Button
        android:id="@+id/azul"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="#3498DB"

        app:layout_constraintBottom_toTopOf="@+id/jugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rojo" />
        <!--android:text="@string/boton_azul"-->

    <Button
        android:id="@+id/jugar"
        android:layout_width="109dp"
        android:layout_height="60dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="260dp"
        android:text="@string/boton_jugar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="86dp"
        android:text="TITULO"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ronda"
        android:layout_width="71dp"
        android:layout_height="65dp"
        android:layout_marginStart="307dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="15dp"
        android:text="@string/boton_ronda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>