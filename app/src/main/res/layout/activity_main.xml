<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#EC0C0C"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/amarillo"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="227dp"
        android:backgroundTint="#FFEB3B"
        android:text="AMARILLO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rojo"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="#E61616"
        android:text="ROJO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/amarillo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verde"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="349dp"
        android:backgroundTint="#26E81F"
        android:text="VERDE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amarillo"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/azul"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="349dp"
        android:backgroundTint="#133FE1"
        android:text="AZUL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/verde"
        app:layout_constraintTop_toBottomOf="@+id/rojo"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/jugar"
        android:layout_width="109dp"
        android:layout_height="60dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="217dp"
        android:text="JUGAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="214dp"
        android:layout_height="38dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="99dp"
        android:text="TITULO"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ronda"
        android:layout_width="71dp"
        android:layout_height="65dp"
        android:layout_marginStart="339dp"
        android:layout_marginTop="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>